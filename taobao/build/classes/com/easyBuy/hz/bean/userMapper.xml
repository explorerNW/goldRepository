<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easyBuy.hz.bean.userMapper">
	<!-- 
		根据id查询得到一个user对象
	 -->
	 <select id="getUser"  resultType="User" parameterType="User">
	 	select en_user_pwd from easybuy_user where en_user_id = #{en_user_id}
	 </select>	 
	 <resultMap type="User" id="userList">
	     <result column="en_user_id" property="en_user_id" />
	     <result column="en_user_name" property="en_user_name"/>
	     <result column="en_user_sex" property="en_user_sex"/>
	     <result column="email" property="email"/>
	     <result column="en_mobile" property="en_mobile"/>
	     <result column="en_address" property="en_address"/>
	     <result column="en_status" property="en_status"/>
	 </resultMap>
	 <resultMap type="Product" id="productList">
	     <result column="ep_id" property="ep_id" />
	     <result column="ep_name" property="ep_name" />
	     <result column="ep_description" property="ep_description" />
	     <result column="ep_price" property="ep_price" />
	     <result column="ep_stock" property="ep_stock" />	     
	     <result column="ep_file_name" property="ep_file_name" />	    
	 </resultMap>
	 <resultMap type="Order" id="orderList">
	     
	 </resultMap>
	 <select id = "allUser" resultMap="userList">
	     select * from easybuy_user 
	 </select>
	 <insert id="setUser"  parameterType="User">
	     insert into easybuy_user values (#{en_user_id},#{en_user_name},#{en_user_pwd},#{en_user_sex},#{en_user_birthday},
	                                      #{en_user_identify_code},#{email},#{en_mobile},#{en_address},#{en_status})
	 </insert>
	 <delete id="userDelete" parameterType="User">
	     delete from easybuy_user where en_user_id = #{en_user_id}
	 </delete>
	 <update id="userUpdate" parameterType="User">
	     update easybuy_user set en_user_name = #{en_user_name}
         where en_user_id = #{en_user_id}
	 </update>
	 <select id = "productList" resultMap = "productList">
	           select * from easybuy_product
	 </select>
	 <insert id="addProduct" parameterType="Product">
	     insert into easybuy_product values(#{ep_id},#{ep_name},#{ep_description},
	     #{ep_price},#{ep_stock},#{ep_file_name});
	 </insert>
	
	 
</mapper>
